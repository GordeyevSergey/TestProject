<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/rv_service_root_margins">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/service_icon"
            android:layout_width="@dimen/rv_service_icon_size"
            android:layout_height="@dimen/rv_service_icon_size"
            android:layout_margin="@dimen/rv_service_icon_margin"
            android:src="@drawable/ic_rv_services"
            />
        <TextView
            android:id="@+id/service_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rv_service_default_title"
            android:layout_toEndOf="@+id/service_icon"
            android:layout_marginTop="@dimen/rv_service_title_margin"
            android:textSize="@dimen/rv_service_title_size"
            android:textStyle="bold"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>